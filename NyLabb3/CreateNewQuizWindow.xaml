<Window x:Class="NyLabb3.CreateNewQuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Quiz" Height="450" Width="800">
    <Grid>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="LightBlue" Offset="0.0" />
                <GradientStop Color="DodgerBlue" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel Margin="10">
            <TextBox x:Name="QuizTitleTextBox" Margin="5"/>
            <TextBox x:Name="QuestionTextBox"  Margin="5"/>
            <TextBox x:Name="Answer1TextBox" Margin="5"/>
            <TextBox x:Name="Answer2TextBox"  Margin="5"/>
            <TextBox x:Name="Answer3TextBox"  Margin="5"/>
            <ComboBox x:Name="CorrectAnswerComboBox" Margin="5" >
                <ComboBoxItem Content="1" />
                <ComboBoxItem Content="2" />
                <ComboBoxItem Content="3" />
            </ComboBox>
            <Button Content="Add Question" Click="AddQuestion_Click" Margin="5"/>
            <Button Content="Save Quiz" Click="SaveQuiz_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
